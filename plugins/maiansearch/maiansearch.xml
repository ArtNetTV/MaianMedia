<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="search" method="upgrade">
	<name>Search - Maian Media</name>
	<creationDate>October 2009</creationDate>
	<author>Are Times</author>
	<authorEmail>alao@aretimes.com</authorEmail>
	<authorUrl>http://www.aretimes.com</authorUrl>
	<license>License, for example GNU/GPL</license>
	<version>1.1</version>
	<description>Include album is Joomla main search</description>
	<files>
		<filename plugin="maiansearch">maiansearch.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">

			<fieldset name="basic">

				<field name="search_limit" type="text" default="5" label="Search Limit"
					description="Number of Search items to return" />
				<field name="title" type="text" default="Maian Search" label="Title"
					description="Title to show up in search area" />
				<field name="album_name" type="radio" default="1" label="Albums"
					description="Include Albums In Search">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="track_name" type="radio" default="1" label="Tracks"
					description="Include Tracks In Search">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="comments" type="radio" default="1" label="Comments"
					description="Include Comments In Search">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="keywords" type="radio" default="1" label="Keywords"
					description="Include Keywords In Search">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>

